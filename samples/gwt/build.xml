<project name="GWTDocs" default="androiddoc" basedir=".">

<!-- To build documentation for GWT:

	1. Download GWT from SVN:
		cd /path/to/gwtdoc
		svn checkout http://google-web-toolkit.googlecode.com/svn/trunk/ gwt-src

	2. run: `ant androiddoc`
		Documentation will be built for the files listed in input/gwt-src-list.
		This file was generated with the command:
		  rm androiddoc/gwt-src-list; for d in gwt-src/user/src gwt-src/dev gwt-src/user/super; do find $d -name '*.java' >> androiddoc/gwt-src-list; done
-->

  <property name="anddroiddoc.file" 
    value="../../build/dist/androiddoc-0.1.6/androiddoc-0.1.6.jar"/>

  <target name="androiddoc" description="Generate documentation">
    <taskdef name="androiddoc" classname="AndroiddocTask" classpath="${anddroiddoc.file}"/>
      <androiddoc>
        <arguments>
        	-quiet
        	-doclet DroidDoc
        	-docletpath ${anddroiddoc.file}
        	-classpath /usr/lib/jvm/java-6-sun/jre/lib/rt.jar
        	-d build/api
        	-hdf project.name "GWT"
        	-stubs build/stubs
        	-apixml build/public_api.xml
        	@doclava/gwt-src-list
      	</arguments>
      </androiddoc>
  </target>

  <target name="clean" description="Remove generated files.">
    <delete dir="build"/> 
  </target>

</project>
